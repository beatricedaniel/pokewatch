# ========================================
# PokeWatch Environment Variables
# ========================================
# Copy this file to .env and fill in your credentials

# Pokemon Price Tracker API Key (Required)
# Get your key from: https://www.pokemonpricetracker.com/api
POKEMON_PRICE_API_KEY=your_api_key_here

# ========================================
# DagsHub MLflow Integration (Production)
# ========================================
# DagsHub token for MLflow tracking and DVC storage
# Get your token from: https://dagshub.com/user/settings/tokens
DAGSHUB_TOKEN=your_dagshub_token_here

# MLflow tracking URI (DagsHub MLflow server)
MLFLOW_TRACKING_URI=https://dagshub.com/YOUR_USERNAME/pokewatch.mlflow

# DagsHub username for MLflow authentication
MLFLOW_TRACKING_USERNAME=your_dagshub_username

# ========================================
# Local MLflow Stack (Optional - Development Only)
# ========================================
# Uncomment these to use local MLflow server instead of DagsHub
# Start local stack with: docker-compose --profile mlflow up
#AWS_ACCESS_KEY_ID=minioadmin
#AWS_SECRET_ACCESS_KEY=minioadmin
#MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
#MLFLOW_TRACKING_URI=http://localhost:5001

# ========================================
# Application Settings
# ========================================
# Environment mode: dev, test, prod, training
ENV=prod

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
